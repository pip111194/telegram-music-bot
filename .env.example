# Telegram Bot Configuration
API_ID=your_api_id
API_HASH=your_api_hash
BOT_TOKEN=your_bot_token

# Database
MONGO_DB_URI=your_mongodb_uri

# Bot Settings
LOG_GROUP_ID=your_log_group_id
OWNER_ID=your_user_id

# ============================================
# MUSIC PLATFORM API KEYS (ALL OPTIONAL!)
# ============================================

# Spotify (Optional - Get from: https://developer.spotify.com/dashboard)
SPOTIFY_CLIENT_ID=your_spotify_client_id
SPOTIFY_CLIENT_SECRET=your_spotify_client_secret

# SoundCloud (Optional - Get from: https://soundcloud.com/you/apps)
SOUNDCLOUD_CLIENT_ID=your_soundcloud_client_id

# Jamendo (Optional - Free API: https://developer.jamendo.com)
JAMENDO_CLIENT_ID=your_jamendo_client_id

# Audiomack (Optional - Free API: https://www.audiomack.com/data-api)
AUDIOMACK_API_KEY=your_audiomack_api_key

# ============================================
# PLATFORM ENABLE/DISABLE (true/false)
# ============================================

# Platforms with API keys
ENABLE_SPOTIFY=true
ENABLE_SOUNDCLOUD=true
ENABLE_JAMENDO=true
ENABLE_AUDIOMACK=true

# Free platforms (No API key needed!)
ENABLE_JIOSAAVN=true
ENABLE_GAANA=true
ENABLE_WYNK=true
ENABLE_APPLE_MUSIC=true
ENABLE_DEEZER=true
ENABLE_YOUTUBE=true

# ============================================
# NOTE: 
# - JioSaavn, Gaana, Wynk work WITHOUT any API key!
# - Apple Music uses public iTunes API (no key needed)
# - Deezer uses public API (no key needed)
# - YouTube uses yt-dlp (no key needed)
# - Just enable/disable platforms as needed
# ============================================
